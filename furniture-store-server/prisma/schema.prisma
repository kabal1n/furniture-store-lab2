generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Furniture {
  id          Int      @id @default(autoincrement())
  name        String
  type        String
  color       String
  description String
  width       Int
  height      Int
  depth       Int
  images      String[]     // массив URL
  shelves     Int[] @default([])        // опционально, только если это шкаф
  createdAt   DateTime  @default(now())
  customModels CustomModel[]
}

model CustomModel {
  id        Int      @id @default(autoincrement())
  baseId    Int
  base      Furniture @relation(fields: [baseId], references: [id])
  data      Json
  createdAt DateTime @default(now())
}

model Admin {
  id       Int    @id @default(autoincrement())
  login    String @unique
  password String
}
